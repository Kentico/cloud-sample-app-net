@model IEnumerable<DancingGoat.Models.Product>

@if (Model.Any())
{
    foreach (var product in Model)
    {
        <!-- 3 products on row for large screen -->
        <div class="col-md-6 col-lg-4">
            @Html.DisplayFor(m => product)
        </div>
    }
}
else
{
    <span class="ContentLabel">@Resources.DancingGoat.Brewers_NoMatchingProducts</span>
}