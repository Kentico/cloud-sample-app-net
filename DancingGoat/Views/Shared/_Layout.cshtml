    <script type="text/javascript">
        function toggleEditMode(isChecked) {
            const body = document.getElementsByTagName('body')[0];
            isChecked ? body.classList.add('edit-mode') : body.classList.remove('edit-mode');
        }
    </script>
    <script type="text/javascript">
        function showLearnMore(event, isVisible) {
            event.stopPropagation();
            const element = document.getElementById('modal-dialog');
            const visibility = isVisible === true ? 'block' : 'none';
            element.style.display = visibility;
        }

        window.onclick = function (event) {
            const modalPane = document.getElementsByClassName('modal-dialog__pane')[0];
            const isClickInside = modalPane.contains(event.target);
            if (!isClickInside) {
                showLearnMore(event, false);
            }
        }
    </script>

