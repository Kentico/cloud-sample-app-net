@model IEnumerable<DancingGoat.Models.Brewer>

@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
    ViewBag.Title = Resources.DancingGoat.Brewers;
    var brewersAsProducts = Model.Cast<DancingGoat.Models.Product>();
}

<div class="product-page row">
    <div class="flex">
        <aside class="col-md-4 col-lg-3 product-filter">
            @using (Html.BeginForm("Filter", "Brewers"))
            {
                @Html.Partial("BrewersFilter", new DancingGoat.Models.BrewerFilterViewModel())
            }
        </aside>

        <div id="product-list" class="col-md-8 col-lg-9 product-list">
            @Html.Partial("ProductListing", brewersAsProducts)
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/formAutoPost.js")

    <script>
            $(".js-postback input:checkbox").formAutoPost({ targetContainerSelector: "#product-list" });
    </script>
}